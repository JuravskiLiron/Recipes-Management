<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recipes Management</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        /* Default Light Theme */
        body {
            background-color: #f8f9fa;
            color: #212529;
            transition: background-color 0.3s, color 0.3s;
        }

        .navbar-light {
            background-color: #ffffff;
        }

        .footer {
            background-color: #343a40;
            color: #ffffff;
        }

        .nav-link {
            color: #495057;
        }

        .nav-link.active {
            color: #007bff;
        }

        .btn-outline-primary {
            border-color: #007bff;
            color: #007bff;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #ffffff;
        }

        /* Dark Theme */
        body.dark-mode {
            background-color: #343a40;
            color: #f8f9fa;
        }

        body.dark-mode .navbar-light {
            background-color: #495057;
        }

        body.dark-mode .footer {
            background-color: #212529;
        }

        body.dark-mode .nav-link {
            color: #f8f9fa;
        }

        body.dark-mode .nav-link.active {
            color: #00bcd4;
        }

        .filter-container {
            background-color: #ffffff;
            border-radius: .375rem;
            padding: 1rem;
            box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075);
            margin-bottom: 1rem;
        }

        .recipe-card {
            border-radius: .375rem;
            box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075);
            overflow: hidden;
            transition: transform 0.2s;
        }

        .recipe-card:hover {
            transform: scale(1.02);
        }

        .recipe-card img {
            width: 100%;
            height: auto;
        }

        .recipe-card-body {
            padding: 1rem;
        }

        .recipe-card-title {
            font-size: 1.25rem;
            margin-bottom: .5rem;
        }

        .recipe-card-description {
            font-size: .875rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">Recipes Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Categories/Appetizers">Appetizers</a></li>
                                <li><a class="dropdown-item" href="/Categories/MainCourses">Main Courses</a></li>
                                <li><a class="dropdown-item" href="/Categories/Desserts">Desserts</a></li>
                                <li><a class="dropdown-item" href="/Categories/Salads">Salads</a></li>
                                <li><a class="dropdown-item" href="/Categories/Soups">Soups</a></li>
                                <li><a class="dropdown-item" href="/Categories/Beverages">Beverages</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" aria-disabled="true" href="#">Contact</a>
                        </li>
                    </ul>
                    <form class="d-flex ms-auto" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search recipes" aria-label="Search">
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                    </form>
                    <button id="theme-toggle" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-moon"></i> Toggle Theme
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center py-3">
        <div class="container">
            <p class="mb-0">&copy; 2024 Recipes Management - <a href="/Home/Privacy">Privacy</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const themeToggle = document.getElementById('theme-toggle');
            const currentTheme = localStorage.getItem('theme') || 'light';

            if (currentTheme === 'dark') { 
                document.body.classList.add('dark-mode');
            }

            themeToggle.addEventListener('click', () => {
                document.body.classList.toggle('dark-mode');
                const theme = document.body.classList.contains('dark-mode') ? 'dark' : 'light';
                localStorage.setItem('theme', theme);
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
